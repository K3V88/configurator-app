<div class="property-page text-center bg-black text-white py-5">

  <!-- Page Title -->
  <h1 class="property-title mb-4">Edit Apartment</h1>

  <!-- Apartment Form -->
  <div class="mx-auto" style="max-width: 500px;">
    <%= form_with(model: [@wohnung, @apartment], local: true, html: { class: "text-start" }) do |f| %>
      
      <% if @apartment.errors.any? %>
        <div class="alert alert-danger">
          <h5>There were some errors:</h5>
          <ul>
            <% @apartment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :floor, class: "form-label" %>
        <%= f.number_field :floor, class: "form-control", min: 0 %>
      </div>

      <div class="mb-3">
        <%= f.label :rooms, class: "form-label" %>
        <%= f.number_field :rooms, class: "form-control", min: 0 %>
      </div>

      <div class="mb-3">
        <%= f.label :size, "Size (m²)", class: "form-label" %>
        <%= f.number_field :size, class: "form-control", step: 0.1, min: 0 %>
      </div>

      <div class="mb-3">
        <%= f.label :price, "Base Price (€)", class: "form-label" %>
        <%= f.number_field :price, class: "form-control", step: 1000, min: 0 %>
      </div>

      <!-- Description -->
    <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>

      <div class="mb-3">
        <%= f.label :image, "Apartment Image", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
        <% if @apartment.image.attached? %>
          <div class="mt-2">
            <%= image_tag @apartment.image, class: "img-fluid rounded", style: "max-width:200px;" %>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "Update Apartment", class: "btn btn-outline-light" %>
        <%= link_to "Cancel", wohnung_path(@wohnung), class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>

</div>

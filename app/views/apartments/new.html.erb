<div class="container py-5 text-white">

  <h1 class="text-center mb-4">
    Create Apartment for <%= @wohnung.name %>
  </h1>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="bg-dark p-4 rounded">

        <%= form_with(model: [@wohnung, @apartment], local: true) do |f| %>

          <% if @apartment.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @apartment.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Floor -->
          <div class="mb-3">
            <%= f.label :floor, class: "form-label" %>
            <%= f.number_field :floor, class: "form-control", required: true %>
          </div>

          <!-- Rooms -->
          <div class="mb-3">
            <%= f.label :rooms, class: "form-label" %>
            <%= f.number_field :rooms, class: "form-control", required: true %>
          </div>

          <!-- Size -->
          <div class="mb-3">
            <%= f.label :size, "Size (m²)", class: "form-label" %>
            <%= f.number_field :size, class: "form-control", required: true %>
          </div>

          <!-- Base Price -->
          <div class="mb-3">
            <%= f.label :price, "Base Price (€)", class: "form-label" %>
            <%= f.number_field :price, step: 1000, class: "form-control", required: true %>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Optional description of this apartment" %>
          </div>

          <!-- Image (optional) -->
          <div class="mb-4">
            <%= f.label :image, class: "form-label" %>
            <%= f.file_field :image, class: "form-control" %>
          </div>

          <!-- Submit -->
          <div class="d-flex justify-content-between">
            <%= f.submit "Create Apartment", class: "btn btn-outline-light" %>
            <%= link_to "Cancel", wohnung_path(@wohnung), class: "btn btn-outline-secondary" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>

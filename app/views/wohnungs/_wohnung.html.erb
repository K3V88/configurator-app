<div class="details-container">
  <div class="wohnung-image">
    <% if wohnung.image.attached? %>
      <%= image_tag wohnung.image, class: "img-fluid" %>
    <% end %>
  </div>

  <div class="wohnung-details">
    <div class="wohnung-name"><h1><%= wohnung.name %></h1></div>
    <p><%= wohnung.description %></p>


  </div>

</div>

<div class="wohnung-location"><p class="created-by">Created by: <%= wohnung.user.try(:email) || "Unknown" %></p>📍 Location: <%= wohnung.location %></div>

<div class="property-page">

  <!-- Title -->
  <h1 class="property-title">
    <%= wohnung.name %>
  </h1>

  <!-- Full width image -->
<% if wohnung.image.attached? %>
  <div style="text-align: center; margin: 2rem 0;">
    <%= image_tag wohnung.image, 
        style: "display: block; margin: 0 auto; max-width: 600px; width: 100%; height: auto;" %>
  </div>
<% end %>



  <!-- Description -->
  <% if wohnung.description.present? %>
    <div class="property-description">
      <p>
        <%= wohnung.description %>
      </p>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="property-footer">
    <div class="created-by">
      created by <%= wohnung.user&.email || "atelier noir" %>
    </div>

    <div class="location">
      <%= wohnung.location %>
    </div>
  </div>
</div>
